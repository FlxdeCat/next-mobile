<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="edu.bluejack23_1.next.model.User" />

        <variable
            name="listener"
            type="edu.bluejack23_1.next.model.recyclerView.adapter.IParticipantListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent">

            <edu.bluejack23_1.next.components.UserThumbnailImageView
                android:id="@+id/event_issuer_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user_icon"
                app:imgUrlByUsername="@{user.id}" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="8dp">

                <TextView
                    android:id="@+id/participantInitialET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                android:text="@{user.id}"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/participantNameET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="@{user.name}"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/participantEmailET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="@{user.email}"
                    android:textSize="11sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/remove"
                android:onClick="@{(v) -> listener.onDeleteClicked(user.id)}"
                android:src="@drawable/baseline_close_24" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>