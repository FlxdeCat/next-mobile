<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.next" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="floatingActionButtonStyle">@style/AddButtonStyle</item>
    </style>

    <style name="Theme.next" parent="Base.Theme.next" />
    
    <style name="AddButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/AddButtonShapeStyle</item>
        <item name="backgroundTint">@null</item>
        <item name="elevation">0dp</item>
    </style>
    
    <style name="AddButtonShapeStyle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="strokeColor">@android:color/transparent</item>
    </style>
</resources>